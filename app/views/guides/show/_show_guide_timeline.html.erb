<accordion-group
  ng-init="timeline.isopen = true"
  is-open="timeline.isopen"
  class="accordion-navigation timeline">
  <accordion-heading class="title-wrapper">
    <h2 class="title" id="timeline">
      <%= t('.title') %>
      <i class="right" ng-class="{'fa fa-angle-down': true, 'open': timeline.isopen}"></i>
    </h2>
  </accordion-heading>
  <p class="section-text">
    <div class="box">
      <div class="row" ng-if="haveTimes.length === 0">
        <div class="empty columns large-12 large-centered">
          <i class="fa fa-clock-o"></i><br/>
          <%= t('.not_supplied_timeline_info') %>
        </div>
      </div>
      <div class="row" ng-if="haveTimes.length > 0">
        <div class="timeline-box large-12 columns large-centered" timeline>
        </div>
      </div>
    </div>

  </p>
</accordion-group>

